@model IEnumerable<DataApp.Core.Models.CheckVoucher>
@using DataApp.Core.Models
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<TransactionAccount> accounts = (List<TransactionAccount>)ViewBag.TransactionAccounts;
    
}

<h2>CheckVouchers</h2>

<div class="row search-bar" style="padding:6px 0 6px 0">
    <div class="col-md-12">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default btn-success" })
        <form class="navbar-form navbar-right" role="form" method="get">
            <div class="form-group">
                <input id="search-string" placeholder="Search" class="form-control" type="text" name="search">
            </div>
            <button type="submit" id="search-btn" class="btn btn-primary">Find</button>
        </form>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DueDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EntryDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CheckNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VoucherNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th>
            Payee
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DueDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EntryDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CheckNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VoucherNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        <td>
            @accounts.SingleOrDefault(acc => acc.Id == item.PayeeId).Name
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
